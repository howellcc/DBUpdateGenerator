<Window x:Class="DBUpdateFileGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBUpdateFileGenerator"
        mc:Ignorable="d"
        Title="DBUpdate Generator" 
        SizeToContent="WidthAndHeight">
   <Grid>
      <StackPanel Orientation="Horizontal" Margin="50, 100, 50, 100">
         <Label Content="Create DBUpdate files for the " HorizontalAlignment="Left"  VerticalAlignment="Top" Width="164"/>
         <TextBox Text="3" Name="txtRange" TextAlignment="Right" VerticalAlignment="Center" Width="20" MaxLength="2" Margin="5,0,0,0"></TextBox>
         <Label Content="000's" HorizontalAlignment="Left"  VerticalAlignment="Top" />
         <Button x:Name="btnGo" Content="Go" HorizontalAlignment="Left"  VerticalAlignment="Top"  Width="59" Height="26" Click="btnGo_Click" Margin="20,0,0,0"/>
      </StackPanel>
   </Grid>
</Window>
